<project name="Generate Open Office File" default="generateOO" basedir="."> 
  <target name="generateOO" description="Generate a compressed valid OO file structure">
  
  	<mkdir dir="${oo.dest.dir}" />
  	
  	<copy todir="${oo.dest.dir}">
		<fileset dir="${oo.src.dir}/" />
	</copy>

  	<copy file="${oo.src.gen.dir}/content.xml" todir="${oo.dest.dir}"/>
  	
	<zip zipfile="${oo.dest.name}" basedir="${oo.dest.dir}"/>		
  
  	<delete dir="${oo.dest.dir}"/>
  	
  	<copy file="${oo.dest.name}" tofile="${oo.target}"/>
  	
  </target>
</project>
